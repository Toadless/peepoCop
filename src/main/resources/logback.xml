<configuration debug="false">

    <property name="DEV_HOME" value="./logs"/>

    <!--CONSOLE -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([) %boldWhite(%d{dd.MM.yyyy HH:mm:ss}) %highlight(%-5level) %highlight(]) %green([%t]) %boldWhite([%logger{0}]) : %white(%msg) %n</pattern>
        </encoder>
    </appender>

    <!--FILE OUT-->
    <appender name="FILE-AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>${DEV_HOME}/peepoCop.log</file>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss} [%thread] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${DEV_HOME}/archived/peepoCop-%d{dd.MM.yyyy}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="org.mongodb.driver" level="ERROR"/>

    <!--Root logger-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE-AUDIT"/>
    </root>
</configuration>